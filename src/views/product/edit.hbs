<div id="content-wrapper">
  <div class="container-fluid">
      <!-- Breadcrumbs-->
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="#">Chỉnh sửa sản phẩm</a>
        </li>
      </ol>

      <!-- DataTables -->
      <div class="card mb-3">
          <div class="card-header">
              <i class="fas fa-table"></i>
              Danh sách sản phẩm
          </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                    <th style="width: 160px;">Mã sản phẩm</th>
                    <th>Hãng</th>
                    <th style="width: 140px;">Thương hiệu</th>
                    <th style="width: 140px;">Tên sản phẩm</th>
                    <th>CPU</th>
                    <th>Ram</th>
                    <th>VGA</th>
                    <th style="width: 100px;">Bộ nhớ</th>
                    <th style="width: 140px;">Giá nhập</th>
                    <th style="width: 140px;">Giá bán</th>
                    <th style="width: 40px;">SL</th>
                    <th>Chọn</th>
                </tr>
              </thead>
              <tbody>
                {{#if listPro}}
                {{#each listPro}}
                <tr>
                    <th scope="row">{{this.laptop_id}}</th>
                    <td>{{this.manu_name}}</td>
                    <td>{{this.md_name}}</td>
                    <td>{{this.laptop_name}}</td>
                    <td>{{this.laptop_cpu}}</td>
                    <td>{{this.laptop_ram}}</td>
                    <td>{{this.laptop_vga}}</td>
                    <td>{{this.laptop_disk}}</td>
                    <td>{{this.cost}} vnđ</td>
                    <td>{{this.price}} vnđ</td>
                    <td>{{this.inventory}}</td>
                    <td><button type="button"><a href="/product/edit/{{this.laptop_id}}">Sửa</a></button></td>
                </tr>
                {{/each}}
                {{/if}}
              </tbody>
            </table>

            <div class="pagination">
            <div class="row">
              <div class="col-lg-6 col-md-6 pt-xs-15">
              </div>
              <div class="col-lg-6 col-md-6">
                <ul class="pagination-box pt-xs-20 pb-xs-15">
                  {{#each listPage}}
                  <li><a href="/product/edit?page={{this}}">{{this}}</a></li>
                  {{/each}}
                </ul>
              </div>
            </div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>